<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddChapterActivity">

    <TextView
        android:id="@+id/textViewIdChapter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Id chapter"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextContentChapter"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Nội dung (Truyện chữ)"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/textViewIdChapter"
        app:layout_constraintStart_toStartOf="@+id/textViewIdChapter"
        app:layout_constraintTop_toBottomOf="@+id/textViewIdChapter" />

    <Button
        android:id="@+id/buttonAddChapterNew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Thêm"
        app:layout_constraintEnd_toEndOf="@+id/editTextContentChapter"
        app:layout_constraintStart_toStartOf="@+id/editTextContentChapter"
        app:layout_constraintTop_toBottomOf="@+id/editTextContentChapter" />
</androidx.constraintlayout.widget.ConstraintLayout>
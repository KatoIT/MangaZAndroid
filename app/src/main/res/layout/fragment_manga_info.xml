<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manga_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMangaInfo">

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Rate: 5.0 ⭐"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnRate"
        app:layout_constraintStart_toEndOf="@+id/ibtnRate"
        app:layout_constraintTop_toTopOf="@+id/ibtnRate" />

    <ImageButton
        android:id="@+id/ibtnRate"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="120dp"
        android:background="@color/trans_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pen"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Nội dung"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlot"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="Từ thời Edo đã tồn tại các đầu trường, mà tại đó các thương gia thuê đấu sĩ đấu tay không với nhau, bên nào thắng sẽ có tất cả. Tokita Ouma, biệt danh là “Ashura” tham gia đấu trường và đánh thắng tất cả các đấu thủ của mình. Khả năng đặc biết đè bẹp mọi đối thủ của cậu ta đã được các ông chủ tập đoàn lớn để ý, trong đó có chủ tịch tập đoàn Nogi Hideki."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvAuthor"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Author : Daroemon"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bình Luận"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvPlot"
        app:layout_constraintTop_toBottomOf="@+id/tvPlot" />

    <TextView
        android:id="@+id/tvfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theo dõi"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnfollow"
        app:layout_constraintStart_toStartOf="@+id/tvRate"
        app:layout_constraintTop_toTopOf="@+id/btnfollow"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btnfollow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/unfollow"
        app:layout_constraintEnd_toEndOf="@+id/ibtnRate"
        app:layout_constraintStart_toStartOf="@+id/ibtnRate"
        app:layout_constraintTop_toBottomOf="@+id/ibtnRate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_listcmt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>